<div class="article-meta">
  <ArticleAuthor @author={{@article.author}} @updatedAt={{@article.updatedAt}} />
  {{#if (eq this.session.user.username @article.author.id)}}
    <LinkTo class="btn btn-outline-secondary btn-sm" @route="editor.edit" @model={{@article.id}}>
      <i class="ion-edit"></i> Edit Article
    </LinkTo>
    <button class="btn btn-outline-danger btn-sm" onclick={{action this.deleteArticle}}>
      <i class="ion-trash-a"></i> Delete Article
    </button>
  {{else}}
    <button
      class="btn btn-sm btn{{if (not @article.author.following) "-outline"}}-secondary"
      onclick={{action this.followProfile (if @article.author.following "unfollow" "follow")}}
    >
      <i class="ion-{{if @article.author.following "minus" "plus"}}-round"></i>
      &nbsp;
      {{if @article.author.following "Unf" "F"}}ollow {{@article.author.id}}
    </button>
    &nbsp;&nbsp;
    <button
      class="btn btn-sm btn{{if (not @article.favorited) "-outline"}}-primary"
      onclick={{action this.favoriteArticle (if @article.favorited "unfavorite" "favorite")}}>
      <i class="ion-heart"></i>
      &nbsp;
      {{if @article.favorited "Unf" "F"}}avorite Post <span class="counter">{{@article.favoritesCount}}</span>
    </button>
  {{/if}}
</div>