<div class="article-preview">
  <div class="article-meta">
    <ArticleAuthor @author={{@article.author}} @updatedAt={{@article.updatedAt}} />
    <button
      class="btn btn{{if (not @article.favorited) "-outline"}}-primary btn-sm pull-xs-right"
      onclick={{action this.favoriteArticle @article (if @article.favorited "unfavorite" "favorite")}}>
      <i class="ion-heart"></i> {{@article.favoritesCount}}
    </button>
  </div>
  <LinkTo @route="articles.article" @model={{@article.id}} class="preview-link">
    <h1>{{@article.title}}</h1>
    <p>{{@article.description}}</p>
    <span>Read more...</span>

    {{#if @article.tagList}}
      <ul class="tag-list">
        {{#each @article.tagList as |tag|}}
          <li class="tag-default tag-pill tag-outline">
            <span>{{tag}}</span>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </LinkTo>
</div>