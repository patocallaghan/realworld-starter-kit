<p>Popular Tags</p>

{{#if this.isLoading}}
  <p>Loading...</p>
{{else}}
  <div class="tag-list">
    {{#each this.tags as |tag| }}
      <LinkTo @route="index" @query={{hash author=null tag=tag page=1}} class="tag-pill tag-default" data-test-tag={{tag}}>{{tag}}</LinkTo>
    {{/each}}
  </div>
{{/if}}